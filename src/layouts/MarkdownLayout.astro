---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
const title = frontmatter.title || 'Page';
const showBackLink = frontmatter.showBackLink !== false; // default to true unless explicitly set to false
---

<Layout>
  <main class="blog-post">
    <!-- Optional back link for blog posts -->
    {showBackLink && (
      <nav class="blog-nav">
        <a href="/blogs" class="back-link">‚Üê back</a>
      </nav>
    )}
    
    <!-- Page header -->
    <header class="blog-header">
      <h1 class="blog-title">{title}</h1>
      {frontmatter.date && (
        <time class="blog-date">{frontmatter.date}</time>
      )}
    </header>
    
    <!-- Markdown content -->
    <article class="blog-content">
      <slot />
    </article>
  </main>
</Layout>

<style is:global>
  /* Re-enable scrolling for markdown pages */
  html, body {
    overflow: auto !important;
    height: auto !important;
  }
  
  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }
</style>

<style>
  /* Reusing the exact same styles as blog posts for consistency */
  .blog-post {
    max-width: 1000px;
    margin: 0 auto;
    padding: 7rem 2rem 2rem; /* Add top padding to account for fixed header */
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-weight: bold;
    line-height: 1.6;
  }

  /* Navigation back to blog list */
  .blog-nav {
    margin-bottom: 2rem;
  }

  .back-link {
    color: #000;
    text-decoration: none;
    font-size: 1rem;
    font-weight: bold;
    transition: opacity 0.2s ease;
  }

  .back-link:hover {
    opacity: 0.7;
  }

  /* Page header styling (no separator line) */
  .blog-header {
    text-align: left;
    margin-bottom: 3rem;
  }

  .blog-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #000;
    margin-bottom: 0.5rem;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .blog-date {
    display: block;
    color: #000;
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 0;
  }

  /* Content styling with left-aligned text in centered container */
  .blog-content {
    text-align: left;
    color: #000;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-weight: bold;
  }

  /* Figure container for images with captions */
  .blog-content :global(figure) {
    margin: 2rem 0;
    text-align: center;
  }

  /* Ensure images scale down to fit the content area */
  .blog-content :global(figure img) {
    max-width: 80%;
    height: auto;
    display: block;
    margin: 0 auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Typography styles for consistency with blog posts */
  .blog-content :global(h1) {
    font-size: 2rem;
    margin: 2rem 0 1rem;
    color: #000;
  }

  .blog-content :global(h2) {
    font-size: 1.5rem;
    margin: 1.5rem 0 1rem;
    color: #000;
  }

  .blog-content :global(h3) {
    font-size: 1.25rem;
    margin: 1.25rem 0 0.75rem;
    color: #000;
  }

  .blog-content :global(p) {
    margin: 1rem 0;
    line-height: 1.6;
  }

  .blog-content :global(a) {
    color: #000;
    text-decoration: underline;
  }

  .blog-content :global(a:hover) {
    opacity: 0.7;
  }

  .blog-content :global(ul) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .blog-content :global(li) {
    margin: 0.5rem 0;
  }

  .blog-content :global(code) {
    background-color: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: 'Monaco', 'Consolas', monospace;
    font-size: 0.9rem;
  }

  .blog-content :global(pre) {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .blog-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .blog-content :global(figcaption) {
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
  }

  .blog-content :global(blockquote) {
    border-left: 4px solid #000;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
  }

  .blog-content :global(strong) {
    font-weight: 900;
  }

  .blog-content :global(em) {
    font-style: italic;
  }
</style> 
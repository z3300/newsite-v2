---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="hero-container">
		<img 
			src="/images/Untitled_Artwork.png" 
			alt="Untitled Artwork" 
			class="hero-image"
		/>
	</main>
</Layout>

<style>
	.hero-container {
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 80vh;
		padding: 2rem;
	}

	.hero-image {
		max-width: 80%;
		max-height: 70vh;
		width: auto;
		height: auto;
		object-fit: contain;
	}

	@media (max-width: 768px) {
		.hero-image {
			max-width: 95%;
			max-height: 60vh;
		}
		
		.hero-container {
			padding: 1rem;
		}
	}
</style>

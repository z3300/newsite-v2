---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="hero-container">
		<div class="content-wrapper">
			<img 
				src="/images/Untitled_Artwork.png" 
				alt="Untitled Artwork" 
				class="hero-image"
			/>

			<div class="hero-text">

				<h1>
					Zeeshan Chatur
				</h1>
			</div>
		</div>
	</main>
</Layout>

<style>
	.hero-container {
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 80vh;
		padding: 2rem;
	}

	.content-wrapper {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem; /* Reduced gap to push text closer to image */
	}

	.hero-image {
		max-width:70%;
		max-height: 70vh;
		width: auto;
		height: auto;
		object-fit: contain;
	}

	.hero-text {
		text-align: right;
		margin-top: -5rem; /* Added negative margin to pull text up */
	}

	@media (max-width: 768px) {
		.hero-image {
			max-width: 95%;
			max-height: 60vh;
		}
		
		.hero-container {
			padding: 0.5rem;
		}
	}
</style>
